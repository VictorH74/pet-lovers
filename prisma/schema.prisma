generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id        Int     @id @default(autoincrement())
  species   String
  age       String
  breed     String
  price     Float
  PetShop   PetShop @relation(fields: [PetShopId], references: [id])
  PetShopId String  @unique
}

